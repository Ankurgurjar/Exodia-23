<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Exodia | Events</title>

    <!-- cdn for css of bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/scrollbar.css">

    <style>
        .wrapper {
            height: 100vh;
            display: flex;
            align-items: center;
            vertical-align: middle;
        }

        body {
            background: #0b1e24 linear-gradient(to right, rgb(1, 13, 11) 0%, rgb(11, 30, 36) 25%, rgb(11, 30, 36) 75%, rgb(1, 13, 11) 100%) repeat-y;
            color: white;
        }
    </style>
</head>



<body>

    <!-- importing navbar from the partials -->
    <%- include('partials/navbar.ejs') %>


        <div class="wrapper">
            <div class="container mx-auto row align-items-center">
                <form class="mx-auto d-flex flex-column align-items-center" action="/events/joinTeam" method="POST"
                    style="
                width: 500px;
            ">
                    <div class="title-section container">
                        <label class="heading m-0 py-2" for="teamId">Team Id</label>
                    </div>
                    <input style="text-align: center;
                        color: black;
                        width: 70%;
                        padding: 5px;
                        font-size: 16px;
                        margin-bottom: 20px;
                        border-radius: 10px;" name="teamId" id="teamId" type="text" placeholder="Enter Team Id"
                        required autocomplete="off">

                    <div class="title-section container">
                        <label class="heading m-0 py-2" for="college">College Name</label>
                    </div>
                    <div style="width:100%;margin-bottom: 20px;position: relative;"
                        class="d-flex d-flex-col justify-content-center">
                        <input class="justify-center" style="text-align: center;
                          color:black;
                          width: 70%;
                          padding: 5px;
                          font-size: 16px;
                          border-radius: 10px;" name="college" id="college" placeholder="Enter College Name" required
                            autocomplete="off">
                        <ul class="example" id='college-suggestions'
                            style="z-index:2;display:none;list-style-type:none;position: absolute;top:100%;margin:5px;background-color: black; width:70%;max-height:calc(5*(1rem + 20px));overflow-y: scroll;">
                        </ul>
                    </div>

                    <div class="title-section container">
                        <label class="heading m-0 py-2" for="TeamName">Phone Number</label>
                    </div>
                    <input style="text-align: center;
                            color:black;
                            width: 70%;
                            padding: 5px;
                            font-size: 16px;
                            margin-bottom: 20px;
                            border-radius: 10px;" placeholder="Phone" name="phone" id="phone" type="text" required
                        pattern="[0-9]{10}" autocomplete="off">

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckCheckedDisabled" checked
                            disabled>
                        <label class="form-check-label" for="flexCheckCheckedDisabled">
                            <p>I have understood the <a target="_blank"
                                    href="https://docs.google.com/document/d/17PjtDxJU5LqRwnL999qoHMTUzI2UJyhoOB9MumLFTrc/edit?usp=sharing">terms
                                    and policy</a> of IIT Mandi</p>
                        </label>
                    </div>
                    <input type="submit" class="btn btn-primary" style="border-radius: 30px;
                                padding: 6px;
                                margin:40px;
                                width: 35%;
                                font-size: 17px;" value="Proceed">


                </form>
            </div>
        </div>

        <!-- CDN for js of bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>

        <script src="/js/navbar.js"></script>
</body>

</html>