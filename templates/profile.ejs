<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Exodia | Events</title>

    <!-- cdn for css of bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/navbar.css">
</head>

<body>

    <!-- importing navbar from the partials -->
    <%- include('partials/navbar.ejs') %>

        <h1>Profile</h1>

        <h2>Name : <%=user.firstName %>
        </h2>

        <% if(teams.length==0) { %>
            <strong> No events registered yet</strong>
            <% } else {%>
                <ul>
                    <% for(let i=0;i<teams.length;i++){ %>
                        <a target="_blank" href="/team?teamId=<%=teams[i]._id%>"
                            style="color:black; text-align: right;">
                            <%=teams[i].name%>
                        </a>
                        <% }%>
                </ul>
                <%}%>

                    <!-- CDN for js of bootstrap -->
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
                        crossorigin="anonymous"></script>
</body>

</html>